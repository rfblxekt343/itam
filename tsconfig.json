{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "jsx": "preserve", // Remove or adjust if not using React
    "paths": {
      "@/*": [
        "./*"
      ] // Adjust paths only if you need aliasing
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "scripts/createSampleHero.js"
, "scripts/sync-sheets.js", "utils/google-sheets-sync.ts", "app/api/sync-sheets"  ],
  "exclude": [
    "node_modules"
  ]
}
